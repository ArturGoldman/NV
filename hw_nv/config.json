{
  "name": "default_config",
  "n_gpu": 1,
  "MelSpectrogram": {
    "sr": 22050,
    "win_length": 1024,
    "hop_length": 256,
    "n_fft": 1024,
    "f_min": 0,
    "f_max": 8000,
    "n_mels": 80,
    "power": 1.0,
    "pad_value": -11.5129251
  },
  "arch": {
    "type": "Generator",
    "args": {
      "h": 512,
      "ku": [16, 16, 4, 4],
      "kr": [3, 7, 11],
      "dr": [[[1, 1], [3, 1], [5, 1]], [[1, 1], [3, 1], [5, 1]], [[1, 1], [3, 1], [5, 1]]]
    }
  },
  "data": {
    "train": {
      "batch_size": 10,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "root": ".",
            "to_sr": 22050,
            "limit": 10
          }
        }
      ],
      "collator": {
        "type": "LJSpeechCollator",
        "args": {
        }
      }
    },
    "val": {
      "batch_size": 1,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "root": ".",
            "to_sr": 22050,
            "limit": 10
          }
        }
      ],
      "collator": {
        "type": "LJSpeechCollator",
        "args": {
        }
      }
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas": [0.8, 0.99]
    }
  },
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.999
    }
  },
  "trainer": {
    "epochs": 5,
    "save_dir": "saved/",
    "save_period": 25,
    "verbosity": 2,
    "monitor": "min loss_fs",
    "early_stop": 25,
    "visualize": "tensorboard",
    "wandb_project": "NV-HSE-DLA",
    "len_epoch": 5,
    "log_step": 5
  }
}
